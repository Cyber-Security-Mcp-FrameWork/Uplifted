# Uplifted Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================================================
# Server Configuration
# ============================================================================
UPLIFTED_ENV=development
UPLIFTED__SERVER__HOST=0.0.0.0
UPLIFTED__SERVER__PORT=7541
UPLIFTED__SERVER__WORKERS=4
UPLIFTED__SERVER__LOG_LEVEL=INFO

# ============================================================================
# Tools Server Configuration
# ============================================================================
UPLIFTED__TOOLS_SERVER__PORT=8086
UPLIFTED__TOOLS_SERVER__MCP_ENABLED=true

# ============================================================================
# Database Configuration
# ============================================================================
UPLIFTED__DATABASE__PATH=./data/uplifted.db
UPLIFTED__DATABASE__POOL_SIZE=10
UPLIFTED__DATABASE__TIMEOUT=30

# Optional: PostgreSQL (uncomment if using)
# POSTGRES_PASSWORD=changeme
# UPLIFTED__DATABASE__URL=postgresql://uplifted:changeme@postgres:5432/uplifted

# ============================================================================
# Plugin Configuration
# ============================================================================
UPLIFTED__PLUGINS__ENABLED=true
UPLIFTED__PLUGINS__AUTO_LOAD=true
UPLIFTED__PLUGINS__AUTO_ACTIVATE=true

# ============================================================================
# Logging Configuration
# ============================================================================
UPLIFTED__LOGGING__LEVEL=INFO
UPLIFTED__LOGGING__FILE=./logs/uplifted.log
UPLIFTED__LOGGING__MAX_BYTES=10485760
UPLIFTED__LOGGING__BACKUP_COUNT=5

# ============================================================================
# Security Configuration
# ============================================================================
# UPLIFTED__SECURITY__API_KEY_REQUIRED=false
# UPLIFTED__SECURITY__API_KEY=your-secure-api-key-here
UPLIFTED__SECURITY__CORS_ENABLED=true
UPLIFTED__SECURITY__CORS_ORIGINS=*
UPLIFTED__SECURITY__RATE_LIMIT__ENABLED=true
UPLIFTED__SECURITY__RATE_LIMIT__REQUESTS_PER_MINUTE=60

# ============================================================================
# AI Provider API Keys
# ============================================================================

# OpenAI
OPENAI_API_KEY=

# Anthropic Claude
ANTHROPIC_API_KEY=

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=
AZURE_OPENAI_API_KEY=

# AWS Bedrock
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# DeepSeek
DEEPSEEK_API_KEY=

# Google
GOOGLE_GLA_API_KEY=

# OpenRouter
OPENROUTER_API_KEY=

# ============================================================================
# Optional: Redis (for caching)
# ============================================================================
# REDIS_URL=redis://redis:6379/0
# UPLIFTED__CACHE__ENABLED=true
# UPLIFTED__CACHE__TTL=3600

# ============================================================================
# Optional: Sentry (for error tracking)
# ============================================================================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production
# SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================================================
# Optional: Monitoring
# ============================================================================
# UPLIFTED__MONITORING__ENABLED=true
# UPLIFTED__MONITORING__PROMETHEUS_PORT=9090

# ============================================================================
# Development Only
# ============================================================================
# UPLIFTED__DEBUG=true
# UPLIFTED__PROFILING__ENABLED=false
